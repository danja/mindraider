    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.mindcognition.mindraider</groupId>
        <artifactId>mindraider7</artifactId>
        <version>8.0</version>
    </parent>

    <artifactId>mr7-release</artifactId>
    <packaging>pom</packaging>
    <name>MindRaider distribution release</name>
    <description>
        Generates the public release assemblies of zip and tar.gz's.
    </description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.0</version>

                <executions>
                    <execution>
                        <id>windows</id>
                        <phase>package</phase>
                        <configuration>
                            <descriptor>src/assembly/windows-release.xml</descriptor>
                            <finalName>mindraider-8.0</finalName>
                        </configuration>
                        <goals>
                            <goal>assembly</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>linux</id>
                        <phase>package</phase>
                        <configuration>
                            <descriptor>src/assembly/linux-release.xml</descriptor>
                            <finalName>mindraider-8.0</finalName>
                        </configuration>
                        <goals>
                            <goal>assembly</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>allplatforms</id>
                        <phase>package</phase>
                        <configuration>
                            <descriptor>src/assembly/allplatforms-release.xml</descriptor>
                            <finalName>mindraider-8.0</finalName>
                        </configuration>
                        <goals>
                            <goal>assembly</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <!-- internal -->
        <dependency>
            <groupId>com.mindcognition.mindraider</groupId>
            <artifactId>mr7-SNAPSHOT</artifactId>
            <version>8.0</version>
        </dependency>
    </dependencies>

</project>
